
<p id="notice"><%= notice %></p>

<h1>Test Plans</h1>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Target</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @test_plans.each_with_index do |test_plan, index| %>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td><%= test_plan.name %></td>
        <td><%= test_plan.target %></td>
        <td></td>
        <td><strong><%= link_to 'Edit', edit_test_plan_path(test_plan) %></strong></td>
        <td><strong><%= link_to 'Destroy', test_plan, method: :delete, data: { confirm: 'Are you sure?' } %></strong></td>
        <td><strong><%= link_to 'Execute', :action => "execute", :id => test_plan.id %></strong></td>
      </tr>
    <% end %>
  </tbody>
</table>

